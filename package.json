{
  "name": "peribolos-as-a-service",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/open-services-group/peribolos-as-a-service",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "format": "prettier -w 'src/**/*.ts'",
    "lint": "prettier --check 'src/**/*.{ts,js}'; eslint src --ext .ts,.js"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.3",
    "probot": "^11.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "smee-client": "^1.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ]
      }
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/\\( *newTag: \\).*$/\\1${nextRelease.gitTag}/g' manifests/overlays/stage/kustomization.yaml"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json",
            "manifests/overlays/stage/kustomization.yaml"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
